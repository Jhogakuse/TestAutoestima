<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jhogakuse.telephone.CambioPasword">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="290dp"
                android:layout_gravity="center"
                android:background="#8afefefe">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresa tu contraseña"
                    android:textStyle="normal"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/cambio_OldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:hint="Contraseña"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/cambio_alert_oldpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#f9842b"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="290dp"
                android:layout_gravity="center"
                android:background="#8afefefe">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresa tu nueva contraseña"
                    android:textStyle="normal"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/cambio_txtPassword_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:password="true"
                    android:hint="Nueva contraseña"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/cambio_alertPassword_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#f9842b"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="290dp"
                android:layout_gravity="center"
                android:background="#8afefefe">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirma tu nueva contraseña"
                    android:textStyle="normal"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/cambio_txtPassword_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:password="true"
                    android:hint="Confirmar contraseña"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/cambio_alertPassword_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#f9842b"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="290dp"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/cambio_btnCambio"
                    android:text="Cambiar contraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#b046b762"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
